<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

   <Button
       android:id="@+id/btn_circle"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="圆形图"
       />
    <Button
        android:id="@+id/btn_fillet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="圆角：70P"
        app:layout_constraintLeft_toRightOf="@id/btn_circle"
        />
    <Button
        android:id="@+id/btn_ratio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="宽高比1.2"
        app:layout_constraintLeft_toRightOf="@id/btn_fillet"
        />
    <Button
        android:id="@+id/btn_gif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="加载动图"
        app:layout_constraintLeft_toRightOf="@id/btn_ratio"
        />
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/image_circle"
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        fresco:roundAsCircle="true"
        app:layout_constraintTop_toBottomOf="@id/btn_ratio"
        />
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/image_fillet"
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        fresco:roundedCornerRadius="70dp"
        app:layout_constraintTop_toBottomOf="@id/btn_ratio"
        />
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/image_ratio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        fresco:viewAspectRatio="2.71"
        app:layout_constraintTop_toBottomOf="@id/btn_ratio"
        />
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/image_gif"
        android:layout_width="350dp"
        android:layout_height="300dp"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/btn_ratio"
        />
 <Button
     android:id="@+id/btn_annotation"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     app:layout_constraintLeft_toLeftOf="parent"
     app:layout_constraintRight_toRightOf="parent"
     app:layout_constraintTop_toTopOf="parent"
     app:layout_constraintBottom_toBottomOf="parent"
     android:text="获取注解的值"
     />
 <Button
     android:id="@+id/btn_reflection"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     app:layout_constraintTop_toBottomOf="@id/btn_annotation"
     app:layout_constraintLeft_toLeftOf="parent"
     app:layout_constraintRight_toRightOf="parent"
     android:text="反射添加集合"
     />



</android.support.constraint.ConstraintLayout>